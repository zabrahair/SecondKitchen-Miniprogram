/* pages/selectMealCombo/selectMealCombo.wxss */
.container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 100vh;  

}

.header {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 30vh;  
  border: 1px solid blue;
}

.combo_options {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 80vh;    
  overflow-y: scroll;
  
}

.order_summary {
  /* position: absolute;
  left: 0vw;
  top: 90vh; */

  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: start;
  align-items: center;

  width: 100vw;
  height: 10vh; 

  border-top: 2px solid black; 


}

.combo_title {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  align-self: flex-start;

  width: 70vw;
  height: 5vh;  

  border: 1px solid pink;
}


.dish {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 100vw;
  height: 40vh;  
}

.dish_title {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 50vw;
  height: 10vh;


}

.options {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  height: 30vh;

  border-bottom: 1px solid grey;
}

.dish_option {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 30vw;
  height: 30vh;
  margin-left: 2vw;
  margin-right: 8vw;
}

.dish_image {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 25vw;
  height: 25vw;
}

.dish_radio {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 10vw;
  height: 5vh;  
  margin-top: 1vh;
}

.dish_capital {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  margin-top: 1vh;

  width: 25vw;
  height: 5vh;  
}


.total_price {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  width: 50vw;
  height: 9.9vh;  

}

.total_price,.title {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  margin-left: 3vw;
}

.total_price .price {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;

  margin-left: 1vw;
}

.send_order {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 50vw;
  height: 9.9vh;  

}

.btn_send_order {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;

  width: 40vw;
  height: 8vh;

  font-size: 5vw;
}

